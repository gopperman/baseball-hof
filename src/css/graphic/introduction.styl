.introduction
	background $lemon url(/assets/img/texture.png) no-repeat center center
	background-blend-mode multiply, multiply
	background-size cover, cover
	
	padding-bottom 100px
	
	&__container
		display block
		margin 0 auto
		padding 50px 0 0 0
		max-width 820px
		width 100%
	
	&__title
		font-size 2.5rem
		text-align center
	
	&__credit
		color $black-hed
		text-align center
		margin-top 2rem
		font-family $serif
		font-style italic
	
	p
		color $black-hed
		font-size: 1.2rem;
		
@media screen and (min-width: 990px)
	.introduction
		&__title
			font-size 60px