.introduction
	background url(assets/img/player-hed.png) no-repeat bottom left, linear-gradient($lemon, $lemon)
	background-blend-mode multiply, overlay
	background-size 100% auto, cover
	max-width none	
	padding-bottom 40vw

	&__container
		display block
		margin 0 auto
		padding 30px 0 0 0
		max-width 820px
		width 100%
	
	&__title
		font-size 2.5rem
		text-align center
	
	&__credit
		color $black-hed
		line-height 1.2rem
		text-align center
		margin-top 2rem
		font-size 14px
		font-family $serif
		font-style italic
	
	p
		color $black-hed
		
@media screen and (min-width: 990px)
	.introduction
		&__title
			font-size 60px
		&__container
			padding 50px 0 0 0
		&__credit
			font-size 16px
	
	p
		font-size: 1.2rem