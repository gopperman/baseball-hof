.introduction
	background linear-gradient($lemon, $lemon), url(/assets/img/texture.png) no-repeat center center, url(/assets/img/player-hed.png) no-repeat bottom left
	background-blend-mode multiply, multiply, overlay
	background-size auto, cover, 100% auto
	
	padding-bottom 42vw
	
	&__container
		display block
		margin 0 auto
		padding 50px 0 0 0
		max-width 820px
		width 100%
	
	&__title
		font-size 2.5rem
		text-align center
	
	&__credit
		color $black-hed
		text-align center
		margin-top 2rem
		font-family $serif
		font-style italic
	
	p
		color $black-hed
		font-size: 1.2rem;
		
@media screen and (min-width: 990px)
	.introduction
		&__title
			font-size 60px