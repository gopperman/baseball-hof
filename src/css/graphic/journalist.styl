.journalist
	padding: 0px 25px
	
	p 
		font-family $serif
		&:last-child
			margin-bottom 0
		
	&__accordion
		max-height 595px
		overflow hidden
		transition all, 1s
			
	&__container
		position relative
		padding-bottom 5rem

	&__expand
		background #fff
		color $globe-blue
		font-weight bold
		padding 0 0 .5rem 0
		position absolute
		bottom 3rem
		left 0
		right 0

		&--expanded 
			display none
			
			& + .journalist__accordion
				max-height none
			
		&:hover
			cursor hand
			cursor pointer
	
	&__sidebar	
		li 
			display inline-block
			font-family $benton
			font-weight 400
			list-style-type none
			margin .35rem 0
			width 50% 
			
		p
			margin .25rem 0 .5rem 0
			font-size .75rem
			font-family $serif
			font-style italic
		
	&__hed
		font-family $benton
		font-size 1.6rem
		margin 1rem 0 1rem 0
	
	&__pick-hed 
		font-size 1.2rem
		
	&__picks
		background $offblack
		color $offwhite
		padding 20px 20px 10px 20px
	
	p.journalist__social
		margin .5rem 0
		
	a 
		color $twitter
		
	svg 
		fill $twitter
		height 1.2em
		
@media screen and (min-width: 990px)
	.journalist
		display flex
		padding 65px 15px 0 0
		position relative
	
		&__container
			flex-grow 1
			flex-basis 1
			padding-bottom 2rem
		
		&__expand
			bottom 0
		
		&__sidebar
			flex-grow 0
			flex-basis 1
			text-align right
			margin: 0 30px
			min-width: 290px
		
			li
				display block
				margin .5em 0
				width auto