.journalist
	padding: 25px 0
	
	&__sidebar	
		li 
			display inline-block
			list-style-type none
			margin 1rem 0
			width 50% 
			
		p
			margin 0 0 1rem 0
			font-size .75rem
		
	&__hed
		font-family $benton
		font-size 1.6rem
		margin 1rem 0 1rem 0
	
	&__pick-hed 
		font-size 1.2rem
		
	&__picks
		background $offblack
		color $offwhite
		padding 20px
	
	p.journalist__social
		margin 1rem 0
		
	a 
		color $twitter
		
	svg 
		fill $twitter
		height 1.2em
		
@media screen and (min-width: 990px)
	.journalist
		position relative
		padding-left 25%
		
		&__sidebar
			position absolute
			top 25px
			left 0
			width 22.5%
			
			li
				display block
				text-align right
				width auto